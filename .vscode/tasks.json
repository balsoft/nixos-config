{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "nixos-rebuild",
			"args": [
				"build",
				"--flake",
				"${workspaceFolder}"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Switch",
			"type": "shell",
			"command": "nixos-rebuild",
			"args": [
				"switch",
				"--flake",
				"${workspaceFolder}",
				"--use-remote-sudo"
			],
			"problemMatcher": []
		}
	]
}